<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox fx:id="loginForm" styleClass="to-center" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController" stylesheets="@../css/main.css">
    <children>
        <Label text="Bienvenue sur ce logiciel de partage de musique !"/>
        <HBox styleClass="to-center">
            <VBox>
                <Label text="Pseudo" styleClass="form-lbl"/>
                <TextField fx:id="textFieldPseudo" styleClass="form-field" />
            </VBox>
        </HBox>
        <HBox styleClass="to-center">
            <VBox>
                <Label text="Mot de passe" styleClass="form-lbl"/>
                <PasswordField fx:id="textFieldPassword" styleClass="form-field" />
            </VBox>
        </HBox>
        <HBox styleClass="form-btn-hbox, to-center">
            <Button fx:id="buttonForgottenPassword" styleClass="form-btn" text="Mot de passe oubliÃ©" onAction="#actionForgottenPassword"/>
            <Button fx:id="buttonLogin" styleClass="form-btn" text="Login" onAction="#actionLogin"/>
        </HBox>
        <HBox styleClass="form-btn-hbox, to-center">
            <Button fx:id="buttonImport" styleClass="form-btn" text="Importer information"/>
            <Button fx:id="buttonSignUp" styleClass="form-btn" text="Inscription" onAction="#actionSignup"/>
        </HBox>
    </children>
</VBox>
