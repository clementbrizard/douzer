<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PlayerController">
    <children>
        <Pane prefHeight="100" prefWidth="720.0" style="-fx-border-color: #000000; -fx-border-width: 2; -fx-background-color: #9fc5f8;">
            <children>
                <ProgressBar fx:id="pgMusicProgress" layoutX="99.0" layoutY="50.0" prefHeight="23.0" prefWidth="520.0" />

                <Label fx:id="songInfo" layoutX="99.0" layoutY="26.0" text="-" />


                <Button fx:id="before" mnemonicParsing="false"  layoutX="5.0" layoutY="45.0" maxWidth="30" maxHeight="30" onAction="#playBack">
                    <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true" visible="true">
                            <image>
                                <Image url="@../images/beforeSymbol.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="play" mnemonicParsing="false" layoutX="31.0" layoutY="44.0" maxWidth="30" maxHeight="30" onAction="#playPause">
                    <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true" visible="true">
                            <image>
                                <Image url="@../images/playSymbol.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="next" mnemonicParsing="false"  layoutX="65.0" layoutY="45.0" maxWidth="30" maxHeight="30" onAction="#playNext">
                    <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true" visible="true">
                            <image>
                                <Image url="@../images/nextSymbol.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Label fx:id="lblTime" layoutX="626.0" layoutY="50.0" text="0:00" />
                <Label layoutX="653.0" layoutY="50.0" text="/" />
                <Label fx:id="fullTime" layoutX="658.0" layoutY="50.0" text="-" />

            </children>
        </Pane>
    </children>
</AnchorPane>
