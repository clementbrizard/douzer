<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainController" stylesheets="@../css/main.css">
    <children>
        <BorderPane>
            <center>
                <VBox BorderPane.alignment="TOP_RIGHT">
                    <children>
                        <fx:include fx:id="centralFrame" source="CentralView.fxml" />
                        <fx:include fx:id="player" source="MusicPlayingView.fxml" />
                    </children>
                </VBox>
            </center>
             <left>
                <VBox BorderPane.alignment="TOP_RIGHT">
                    <children>
                        <fx:include fx:id="userInfo" source="ProfileSideView.fxml" />
                        <fx:include fx:id="myMusics" source="MyMusicsSideView.fxml" />
                        <fx:include fx:id="onlineUsersList" source="OnlineUsersListView.fxml" />
                        <fx:include fx:id="contactList" source="ContactsView.fxml" />
                    </children>
                </VBox>
             </left>
             <right>
                 <VBox BorderPane.alignment="TOP_LEFT">
                    <children>
                        <fx:include fx:id="currentMusicInfo" source="CurrentMusicInfoView.fxml" />
                        <fx:include fx:id="downloadView" source="DownloadView.fxml"/>
                    </children>
                 </VBox>
             </right>
        </BorderPane>
    </children>
</AnchorPane>
